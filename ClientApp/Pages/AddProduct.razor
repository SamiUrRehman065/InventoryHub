@page "/addproduct"
@using InventoryHub.Shared.DTOs
@using ClientApp.Services
@inject ProductService ProductService
@inject NavigationManager Navigation

<h3 class="mt-3 text-center text-success">➕ Add New Product</h3>

<div class="d-flex justify-content-center mt-4">
    <div class="card shadow-lg p-4" style="max-width: 700px; width: 100%; border-radius: 12px;">
        <div class="card-body">
            <ProductForm Product="newProduct" OnSubmit="HandleSubmit" />
        </div>
    </div>
</div>

@code {
    private ProductDto newProduct = new();

    private async Task HandleSubmit(ProductDto product)
    {
        await ProductService.CreateProductAsync(product);
        Navigation.NavigateTo("/products");
    }
}